<Page x:Class="VendingMachines.Desktop.Pages.Authentication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VendingMachines.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authentication" Background="LightGray" FontSize="22">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" TextAlignment="Center"  FontSize="40" Margin="0 0 0 40"/>

            <TextBlock Text="Введите email"/>
            <TextBox x:Name="EmailBox" Margin="0 0 0 10"/>

            <TextBlock Text="Введите пароль"/>
            <PasswordBox x:Name="PassBox"  Margin="0 0 0 40"/>

            <Button Content="Войти" Click="Login_Click" Height="40" Background="White" Margin="0 0 0 10"/>

        </StackPanel>
    </Grid>
</Page>
